<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sub.s3.qna.QnaDAO">

	<select id="qnaList" resultType="com.sub.s3.qna.QnaDTO" parameterType="com.sub.s3.util.Pager">
		select * From(select rownum R, N.* from(SELECT * FROM qna where 
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			
			<when test="kind == 'wr'">
				writer
			</when>
			
			<when test="kind == 'con'">
				contents
			</when>
			
			<when test="kind == 'da'">
				regDate
			</when>
			
			<when test="kind == 'hi'">
				hit
			</when>
			
			<when test="kind == 're'">
				ref
			</when>
			
			<when test="kind == 'st'">
				step
			</when>
			
			<otherwise>
				depth
			</otherwise>
			
		</choose>
		like '%'||#{search}||'%' order by num desc) N) where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="qnaCount" resultType="java.lang.Long" parameterType="com.sub.s3.util.Pager">
		select count(num) from qna
		where
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			
			<when test="kind == 'wr'">
				writer
			</when>
			
			<when test="kind == 'con'">
				contents
			</when>
			
			<when test="kind == 'da'">
				regDate
			</when>
			
			<when test="kind == 'hi'">
				hit
			</when>
			
			<when test="kind == 're'">
				ref
			</when>
			
			<when test="kind == 'st'">
				step
			</when>
			
			<otherwise>
				depth
			</otherwise>
		</choose>
		like '%' || #{search} || '%'
	</select>
	
	<insert id="qnaWrite" parameterType="com.sub.s3.qna.QnaDTO">
		insert into qna values(qna_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0, 0, 0, 0)
	</insert>
	
	<update id="qnaUpdate" parameterType="com.sub.s3.qna.QnaDTO">
		update qna set title=#{title}, contents=#{contents} where num=#{num}
	</update>
	
	<select id="qnaSelect" parameterType="java.lang.Long" resultType="com.sub.s3.qna.QnaDTO">
		select * from qna where num = #{num}
	</select>
	
	<delete id="qnaDelete" parameterType="java.lang.Long">
		delete qna where num= #{num}
	</delete>
	
</mapper>